<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TestMappingDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[dept_id  as deptId,dept_id_1 as deptId1
		]]>
	</sql>
	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM test_info]]></sql>

	<sql id="UPDATE_FROM_TABLE"><![CDATA[ test_info]]></sql>
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			<if test="deptId != null and deptId != ''"><![CDATA[AND dept_id = #{deptId}]]></if>
		</where>
	</sql>

	<!-- 全部条件(delete)  -->
	<sql id="DELETE_WHERE_CLAUSE">
		<where>
			<if test="deptId != null and deptId != ''"><![CDATA[AND dept_id = #{deptId}]]></if>
		</where>
	</sql>

    <sql id="UPDATE_WHERE_CLAUSE">

	</sql>
	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="testMapping" resultType="testMapping">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>

	<select id="deleteByKey" parameterType="testMapping" resultType="testMapping">
		<![CDATA[delete]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="DELETE_WHERE_CLAUSE"/>

	</select>



	<select id="updateByKey" parameterType="testMapping" resultType="testMapping">
		<![CDATA[delete]]>
		<include refid="UPDATE_FROM_TABLE"/>
		<include refid="UPDATE_WHERE_CLAUSE"/>

	</select>


</mapper>